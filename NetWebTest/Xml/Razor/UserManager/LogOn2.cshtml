@inherits YJC.Toolkit.Razor.NormalCustomTemplate
@using YJC.Toolkit.MetaData;
@using YJC.Toolkit.Data;
@using YJC.Toolkit.Sys;
@using YJC.Toolkit.LogOn;
@using YJC.Toolkit.Web;
@{
    Tk5NormalTableData table = ViewBag.MetaData.Table;
    IEnumerable<Tk5FieldInfoEx> list = table.TableList;
    ObjectContainer receiver = Model.Object;
    LogOnData logon = (LogOnData)receiver.MainObject;
}
@functions {
    string GetJson(Tk5NormalTableData table)
    {
        var json = string.Format("{{\"Tables\":[{0}]}}", table.JsonFields);
        return StringUtil.EscapeHtmlAttribute(json);
    }
}
@using YJC.Toolkit.Web;
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;" />
    <link rel="stylesheet" type="text/css" href="@("toolkitjs/v5/bootstrap/css/bootstrap.min.css".AppVirutalPath())" />
    <link rel="stylesheet" type="text/css" href="@("toolkitjs/v5/bootstrap/css/font-awesome.min.css".AppVirutalPath())" />
    <link rel="stylesheet" type="text/css" href="@("toolkitjs/v5/adminlte/css/AdminLTE.min.css".AppVirutalPath())" />
    @*<link rel="stylesheet" type="text/css" href="@("toolkitjs/v5/icheck/square/blue.css".AppVirutalPath())" />*@
</head>
<body class="hold-transition login-page" data-webpath="@HtmlUtil.AppVirtualPath" id="WebInsertXmlPage">
    <div class="login-box">
        <div class="login-logo">
            <b>Admin</b>LTE
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">请您登录系统</p>
            <form action="." class="tk-dataform" id="PostForm" data-post="@GetJson(table)" data-searchmethod="Id">
                <div id="LogOnData" class="tk-datatable table-row">
                    <div class="form-group">
                        <span class="tk-control">
                            <div class="has-feedback">
                                <input type="Text" value="@logon.LogOnName" required id="LogOnName" name="LogOnName" class="form-control" data-title="用户名" />
                                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                            </div>
                            <label class="help-block"></label>
                        </span>
                    </div>
                    <div class="form-group">
                        <span class="tk-control">
                            <div class="form-group has-feedback">
                                <input type="Password" id="Password" name="Password" class="form-control" data-title="密　码" />
                                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                            </div>
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                    </div><!-- /.col -->
                    <div class="col-xs-4">
                        <button class="btn btn-primary btn-block btn-flat btn-submit">登录</button>
                    </div><!-- /.col -->
                </div>
            </form>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <script type="text/javascript" src="@("toolkitjs/v5/lib/jquery-1.11.1.min.js".AppVirutalPath())"></script>
    <script type="text/javascript" src="@("toolkitjs/v5/bootstrap/js/bootstrap.min.js".AppVirutalPath())"></script>
    @*<script type="text/javascript" src="@("toolkitjs/v5/icheck/icheck.min.js".AppVirutalPath())"></script>*@
    <script type="text/javascript" src="@("toolkitjs/v5/toolkit/toolkit.js".AppVirutalPath())"></script>
    <script type="text/javascript" src="@("toolkitjs/v5/toolkit/coreT/toolkit.page.js".AppVirutalPath())"></script>
    <script type="text/javascript" src="@("toolkitjs/v5/toolkit/coreT/toolkit.data.js?v=5".AppVirutalPath())"></script>
    <script type="text/javascript" src="@("toolkitjs/v5/toolkit/coreT/toolkit.ui.js".AppVirutalPath())"></script>
    <script type="text/javascript" src="@("toolkitjs/v5/toolkit/coreT/toolkit.edit.js".AppVirutalPath())"> </script>
